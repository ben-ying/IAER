<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recycler_view_header_height"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/black_text"
        android:textSize="@dimen/legend_text_size"
        android:gravity="bottom"
        android:paddingStart="@dimen/recycler_view_padding"
        android:paddingEnd="@dimen/recycler_view_padding" />

    <TextView
        android:id="@+id/tv_expenditure"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_text"
        android:textSize="@dimen/legend_text_size"
        android:gravity="bottom"
        android:paddingStart="@dimen/recycler_view_padding"
        android:paddingEnd="@dimen/recycler_view_padding" />

</LinearLayout>
