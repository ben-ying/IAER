<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/appbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/button_margin_vertical"
        android:paddingEnd="@dimen/button_margin_vertical"
        android:paddingTop="@dimen/button_margin_vertical">

        <TextView
            android:id="@+id/tv_date"
            style="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/hint_disabled_black_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_category"
            style="@style/edit_text.detail" />

        <TextView
            android:id="@+id/tv_money"
            style="@style/edit_text.detail" />

        <TextView
            android:id="@+id/tv_remark"
            style="@style/edit_text.detail" />

    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_delete"
        style="@style/default_bottom_button"
        android:layout_marginStart="@dimen/button_margin_vertical"
        android:layout_marginEnd="@dimen/button_margin_vertical"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_bg_delete"
    android:text="@string/delete" />

    <include layout="@layout/progress" />

</RelativeLayout>
